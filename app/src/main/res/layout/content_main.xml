<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@raw/avocadotoast"
    android:backgroundTintMode="add"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.michael.prototypev2.MainActivity"

    tools:showIn="@layout/activity_main2">

    <Button
        android:id="@+id/Camera_button"

        style="@style/Widget.AppCompat.Button"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@drawable/roundedbutton"
        android:onClick="toCamera"
        android:text="@string/Camera"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/Food_Journal_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Food_Journal_button"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@drawable/roundedbutton"
        android:onClick="toFoodJournal"
        android:text="@string/Food_Journal"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Camera_button"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
